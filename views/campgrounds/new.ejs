<% include ../partials/header %>

<div class="container">
    <div class="row justify-content-left ">
        <div class="col-12">
            <h1 style="text-align: center; margin: 30px 0px;">Create a new campground</h1>
        </div>
        
        <div class="col-12" >
            <div style="margin: 0 auto; width: 40%;">

                <form action="/campgrounds" method="POST">

                    <div class="form-group">
                        <input class="form-control" type="text" name="name" placeholder="campground name">
                    </div>

                    <div class="form-group">
                        <input class="form-control" type="number" name="price" placeholder="price" min="0.01" step="0.01">
                    </div>

                    <div class="form-group">
                        <input class="form-control" type="text" name="image" placeholder="image url">
                    </div>

                    <div class="form-group">
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="description" placeholder="campground description"></textarea>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-primary btn-block">Submit</button>
                    </div>

                </form>
                <a href="/campgrounds">Go back</a>
            </div>
            
        </div>
        
    </div>
</div>


<% include ../partials/footer %>